        }

        var server = {};
        server.name = roomName;
        this.roomName = roomName;
        // 客户端 ID 数组
        var clients = {};

        return webRTC;
    },
    // 加入一个指定名称的会话服务
    joinRoom: function (userName, roomName) {
        // 参数检查
        if (userName == undefined || roomName == undefined) {
            trace('参数 userName 与 roomName 均必须有值！');
            return null;
        }
        if (clientName == roomName) {
            trace('参数 userName 不能与 roomName 相同！');
            return null;
        }
        // 开始执行
        var webRTC = {};
        webRTC.leaveRoom = function () {

        }
        webRTC.closeRoom = function () {

        }

        var server = {};
        // 客户端 ID 数组
        var clientIds = {};


        return webRTC;
    }
}
